# EditorConfig helps maintain consistent coding styles across editors and IdEs.
# Learn more: https://editorconfig.org

root = true

# Global defaults (applies to all files)
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

# Go files follow gofmt conventions: tabs, no trailing whitespace, LF endings
[*.go]
indent_style = tab
tab_width = 2
trim_trailing_whitespace = true
insert_final_newline = true

# Makefiles require tab for indentation
[Makefile]
indent_style = tab

# Shell scripts
[*.sh]
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# Markdown files â€“ don't trim trailing spaces (used for line breaks)
[*.md]
trim_trailing_whitespace = false
insert_final_newline = true

# YAML / YML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2
